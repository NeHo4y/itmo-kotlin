<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
                android:id="@+id/searchView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/header"
                app:layout_constraintBottom_toTopOf="@+id/category_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.027"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="textMultiLine" />

        <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/topic_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchView2"
                android:layout_marginBottom="8dp" />

        <Spinner
                android:id="@+id/topic_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@id/subtopic_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_spinner" />

        <Spinner
                android:id="@+id/subtopic_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topic_spinner"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/b_note_cancel" />

        <Button
            android:id="@+id/b_note_cancel"
            style='@style/Widget.AppCompat.Button.Borderless'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@android:string/cancel"
            app:layout_constraintEnd_toStartOf="@+id/b_note_reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtopic_spinner" />

        <Button
            android:id="@+id/b_note_reset"
            style='@style/Widget.AppCompat.Button.Borderless'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/reset_filter"
            app:layout_constraintEnd_toStartOf="@+id/b_note_ok"
            app:layout_constraintStart_toEndOf="@id/b_note_cancel"
            app:layout_constraintTop_toBottomOf="@id/subtopic_spinner" />

        <Button
                android:id="@+id/b_note_ok"
                style='@style/Widget.AppCompat.Button.Borderless'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@android:string/ok"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/b_note_reset"
                app:layout_constraintTop_toTopOf="@id/b_note_cancel"
                tools:layout_constraintTop_toBottomOf="@id/et_note_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>