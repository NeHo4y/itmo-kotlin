<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/ticket_pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.TicketView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ticket_view_parent"
                android:animateLayoutChanges="true"
                tools:context=".view.TicketView">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/ticket_view_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/AppTheme.AppBarOverlay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:fitsSystemWindows="true"
                        android:layout_weight=".30"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">

                    <ProgressBar
                            android:id="@+id/pb_ticket_view"
                            style="@android:style/Widget.Holo.ProgressBar"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                    android:id="@+id/tv_ticket_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/loading"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textSize="58sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ticket_view_toolbar"/>

            <TextView
                    android:id="@+id/tv_ticket_view_client_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    android:text="Mr. Lemons"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_ticket_view_id"/>

            <TextView
                android:id="@+id/tv_ticket_view_last_updated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="Updated..."
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ticket_view_client_fullname" />

            <View
                android:id="@+id/v_ticket_view_line"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ticket_view_id" />

            <View
                android:id="@+id/v_ticket_view_line3"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/tv_ticket_view_subject"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_ticket_view_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="Subject Line Text Text"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_feedback_status" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/labelBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tv_ticket_view_subject"
                tools:layout_editor_absoluteY="175dp" />

            <View
                android:id="@+id/v_ticket_view_line2"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelBarrier" />

            <TextView
                android:id="@+id/tv_ticket_view_assigned_tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Assigned to Mr.Technician"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ticket_view_last_updated" />

            <TextView
                android:id="@+id/tv_ticket_view_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/lorem_ipsum"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_ticket_view_line2" />

            <LinearLayout
                    android:id="@+id/av_ticket_view_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_ticket_view_details"
                    android:orientation="horizontal"/>

            <LinearLayout
                    android:id="@+id/ll_note_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/av_ticket_view_bottom"/>

            <TextView
                android:id="@+id/tv_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Severity"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_feedback_properties" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Status"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/tv_severity"
                app:layout_constraintTop_toBottomOf="@+id/tv_severity" />

            <TextView
                android:id="@+id/tv_priorityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_header"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_severity"
                app:layout_constraintStart_toStartOf="@+id/tv_feedback_properties" />

            <TextView
                android:id="@+id/tv_feedback_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_header"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_status"
                app:layout_constraintStart_toStartOf="@+id/tv_priorityStatus" />

            <TextView
                android:id="@+id/tv_feedback_properties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/feedback_properties"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_ticket_view_line" />

            <ImageButton
                android:id="@+id/b_edit_props"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:maxWidth="25dp"
                android:maxHeight="25dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_feedback_properties"
                app:layout_constraintStart_toEndOf="@+id/tv_feedback_properties"
                app:layout_constraintTop_toTopOf="@+id/tv_feedback_properties"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <TextView
                android:id="@+id/tv_assign_to_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assign_to_me"
                android:textColor="@color/colorPrimaryLight"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/tv_ticket_view_assigned_tech"
                app:layout_constraintTop_toTopOf="@+id/tv_ticket_view_assigned_tech" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>